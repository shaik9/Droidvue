<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp" >

        <com.hugo.imagehandler.SmartImageView
            android:id="@+id/gridview_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"/>
            <!-- android:src="@drawable/realsteel" /> -->
         <ImageView
             android:id="@+id/gridview_rating_img"
             android:layout_width="150dp"
             android:layout_height="25dp" 
             android:layout_below="@+id/gridview_img"
             android:layout_centerHorizontal="true"
             android:contentDescription="gridview_rating_img"/>
             <!-- android:src="@drawable/rating" />  -->
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/gv_img_selector">
        <com.hugo.imagehandler.SmartImageView
            android:id="@+id/gridview_img"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/sample_image"/>
         <ImageView
             android:id="@+id/gridview_rating_img"
             android:layout_width="100dp"
             android:layout_height="25dp"
             android:layout_below="@+id/gridview_img"
             android:src="@drawable/rate0_5" 
             android:layout_centerHorizontal="true"
             android:contentDescription="gridview_rating_img"/>
</RelativeLayout>
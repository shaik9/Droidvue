        android:icon="@drawable/tv_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hugo.droidapplication.HomeActivity"
            android:label="@string/app_name"
             >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
           android:name="com.hugo.droidapplication.MovieDetailsActivity"/>
         <activity
            android:name="com.hugo.droidapplication.Video">
             </activity>  
    </application>

</manifest>